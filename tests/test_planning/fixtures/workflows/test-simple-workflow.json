{
  "name": "test-simple-workflow",
  "description": "Basic single-node test workflow",
  "ir_version": "0.1.0",
  "ir": {
    "nodes": [
      {
        "id": "node1",
        "type": "test-node",
        "params": {
          "text": "$input_text"
        }
      }
    ],
    "inputs": {
      "input_text": {
        "description": "Input text to process",
        "required": true,
        "type": "string"
      }
    },
    "outputs": {
      "output_text": {
        "description": "Processed output text",
        "type": "string"
      }
    }
  }
}
